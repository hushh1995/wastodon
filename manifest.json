{
    "manifest_version": 2,
    "name": "Wastodon",
    "version": "1.0.3",
    "description": "Reblog a weibo to Mastodon",
    "icons": {
        "48": "icons/border-48.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.weibo.com/*"
            ],
            "js": [
                "browser-polyfill.min.js",
                "wastodon.js"
            ],
            "css": [
                "wastodon.css"
            ]
        }
    ],
    "background": {
        "scripts": [
            "browser-polyfill.min.js",
            "background.js"
        ]
    },
    "permissions": [
        "<all_urls>",
        "identity",
        "storage"
    ]
}
